<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Group Chat</title>
    <style>
        /* General styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }

        /* Navbar */
        .navbar {
            background-color: #333;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar .menu a {
            color: white;
            text-decoration: none;
            margin-left: 15px;
        }

        .navbar .menu a:hover {
            background-color: #575757;
            border-radius: 5px;
            padding: 5px;
        }

        /* Chat Section */
        .chat-container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .chat-messages {
            max-height: 400px;
            overflow-y: scroll;
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f1f1f1;
        }

        .message {
            margin-bottom: 15px;
        }

        .message span {
            display: block;
            margin-bottom: 5px;
        }

        .user {
            font-weight: bold;
            color: #007BFF;
        }

        .text {
            font-size: 16px;
        }

        .timestamp {
            font-size: 12px;
            color: #888;
            text-align: right;
        }

        /* Input Section */
        .chat-input {
            display: flex;
            justify-content: space-between;
        }

        .chat-input input {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 80%;
            margin-right: 10px;
        }

        .chat-input button {
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
        }

        .chat-input button:hover {
            background-color: #0056b3;
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 10px;
            background-color: #333;
            color: white;
        }
    </style>
</head>

<body>
    <header class="navbar">
        <h1>Group Chat</h1>
        <nav class="menu">
            <a href="/">Home</a>
            <a href="/profile">Profile</a>
            <a href="/login">Login</a>
            <a href="/signup">Sign Up</a>
        </nav>
    </header>

    <main>
        <section class="chat-container">
            <h2>Group Chat</h2>

            <!-- Chat Display Area -->
            <div class="chat-messages" id="chatMessages">
                <!-- Messages will be displayed here -->
            </div>

            <!-- Send Message Form -->
            <div class="chat-input">
                <input type="text" id="messageText" placeholder="Type a message..." required>
                <button onclick="sendMessage()">Send</button>
            </div>
        </section>
    </main>

    <footer>
        <p>Â© 2025 Group Chat App. All Rights Reserved.</p>
    </footer>

    <script>
        const chatMessages = document.getElementById('chatMessages');
        const messageText = document.getElementById('messageText');

        let messages = []; // Array to store chat messages

        // Function to render messages
        function renderMessages() {
            chatMessages.innerHTML = '';
            messages.forEach((message) => {
                const messageDiv = document.createElement('div');
                messageDiv.classList.add('message');

                const userSpan = document.createElement('span');
                userSpan.classList.add('user');
                userSpan.textContent = message.user;

                const textSpan = document.createElement('span');
                textSpan.classList.add('text');
                textSpan.textContent = message.text;

                const timestampSpan = document.createElement('span');
                timestampSpan.classList.add('timestamp');
                timestampSpan.textContent = message.timestamp;

                messageDiv.appendChild(userSpan);
                messageDiv.appendChild(textSpan);
                messageDiv.appendChild(timestampSpan);
                chatMessages.appendChild(messageDiv);
            });
        }

        // Function to send a message
        function sendMessage() {
            const text = messageText.value.trim();
            if (text) {
                const newMessage = {
                    user: 'User', // You can replace this with the logged-in user's name
                    text: text,
                    timestamp: new Date().toLocaleTimeString()
                };
                messages.push(newMessage);
                messageText.value = '';
                renderMessages();
            } else {
                alert('Please enter a message!');
            }
        }

        // Initial render of messages (if any)
        renderMessages();
    </script>
</body>

</html>